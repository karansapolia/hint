{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "description": "webhint browser extension",
  "devDependencies": {
    "@hint/hint-axe": "^2.1.1",
    "@hint/hint-content-type": "^3.0.0",
    "@hint/hint-disown-opener": "^2.1.1",
    "@hint/hint-highest-available-document-mode": "^3.0.0",
    "@hint/hint-http-cache": "^2.1.1",
    "@hint/hint-manifest-app-name": "^2.1.0",
    "@hint/hint-manifest-file-extension": "^2.1.1",
    "@hint/hint-manifest-is-valid": "^3.0.0",
    "@hint/hint-meta-charset-utf-8": "^3.0.0",
    "@hint/hint-meta-viewport": "^3.0.0",
    "@hint/hint-minified-js": "^2.1.1",
    "@hint/hint-no-disallowed-headers": "^2.1.1",
    "@hint/hint-no-html-only-headers": "^2.1.1",
    "@hint/hint-no-http-redirects": "^2.1.1",
    "@hint/hint-no-protocol-relative-urls": "^2.1.1",
    "@hint/hint-sri": "^3.0.2",
    "@hint/hint-stylesheet-limits": "^3.0.0",
    "@hint/hint-validate-set-cookie-header": "^2.1.1",
    "@hint/hint-x-content-type-options": "^2.1.1",
    "@hint/parser-css": "^2.0.3",
    "@hint/parser-javascript": "^2.0.3",
    "@hint/parser-manifest": "^2.0.2",
    "@hint/utils-create-server": "^2.0.1",
    "@types/chrome": "^0.0.79",
    "@types/har-format": "^1.2.3",
    "@types/highlight.js": "^9.12.3",
    "@types/is-ci": "^1.1.0",
    "@types/puppeteer": "^1.12.1",
    "@types/sinon": "^7.0.5",
    "ava": "^1.2.1",
    "browserslist": "^4.4.1",
    "cpx": "^1.5.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "highlight.js": "^9.14.2",
    "hint": "^4.3.1",
    "html-minifier": "^3.5.21",
    "is-ci": "^2.0.0",
    "lodash": "^4.17.11",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "puppeteer": "^1.12.2",
    "raw-loader": "^1.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.3",
    "style-loader": "^0.23.1",
    "svg-url-loader": "^2.3.2",
    "typed-css-modules": "^0.3.7",
    "typescript": "^3.3.1",
    "typescript-eslint-parser": "^22.0.0",
    "util.promisify": "^1.0.0",
    "webpack": "^4.29.1",
    "webpack-cli": "^3.2.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src"
  ],
  "homepage": "https://webhint.io/",
  "keywords": [
    "extension",
    "browser",
    "hint",
    "hint-extension-browser",
    "webhint"
  ],
  "license": "Apache-2.0",
  "main": "./dist/src/connector.js",
  "name": "@hint/extension-browser",
  "peerDependencies": {
    "hint": "^4.3.1"
  },
  "private": true,
  "repository": "webhintio/hint",
  "scripts": {
    "build": "npm-run-all build:*",
    "build-css": "tcm src",
    "build-hints": "node ./scripts/import-hints.js",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "npm run build-css && npm run build-hints && cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "build:webpack": "webpack --env.content-script && webpack && cpx \"./src/**/*.{html,json,png,svg}\" dist/bundle",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:css": "tcm src -w",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "1.0.0"
}
